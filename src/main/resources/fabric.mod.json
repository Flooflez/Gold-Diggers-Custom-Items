{
  "schemaVersion": 1,
  "id": "golddiggers",
  "version": "${version}",

  "name": "Gold Diggers Custom Items",
  "description": "A small mod for some Custom items we use on our SMP",
  "authors": [
    "FlooflezMT"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/golddiggers/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "net.gold.diggers.client.GoldDiggersCustomItemsClientModInitializer"
    ],
    "main": [
      "net.gold.diggers.GoldDiggersCustomItems"
    ]
  },
  "mixins": [
    "gold.diggers.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
